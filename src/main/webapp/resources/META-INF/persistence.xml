<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Share" transaction-type="JTA">
        <class>entities.Share</class>
        <class>entities.BankAccount</class>
        <class>entities.Buyer</class>
        <class>entities.Exchange</class>
        <class>entities.Company</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/shares?useSSL=false"/>
        </properties>
    </persistence-unit>
</persistence>
